@model IEnumerable<MicroSocialPlatform.Models.Message>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="SendDirectMessage" method="post">
                <input type="hidden" name="receiverId" value="@ViewBag.ReceiverId" />

                <div class="form-floating mb-3">
                    <textarea name="Content"
                              class="form-control form-control-lg rounded-3"
                              placeholder="Type your message..."
                              rows="3"
                              style="min-height: 120px;"></textarea>
                    <label>Type your message...</label>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-3 d-flex align-items-center justify-content-center gap-2">
                        <i class="bi bi-send-fill"></i>
                        <span>Send Message</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .btn-primary {
        background: linear-gradient(to right, #0d6efd, #0b5ed7);
        border: none;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 5px 15px rgba(13,110,253,0.2);
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}