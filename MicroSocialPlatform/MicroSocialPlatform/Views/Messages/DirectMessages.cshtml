@model IEnumerable<MicroSocialPlatform.Models.Message>

<h2>Direct Messages</h2>

<div class="messages">
    @foreach (var message in Model)
    {
        <div class="message">
            <strong>@message.Sender?.UserName:</strong> @message.Content
            <br />
            <small>@message.Timestamp.ToString("g")</small>
        </div>
    }
</div>

<form asp-action="SendDirectMessage" method="post">
    <input type="hidden" name="receiverId" value="@ViewBag.ReceiverId" />
    <div class="form-group">
        <textarea name="Content" class="form-control" placeholder="Type your message..."></textarea>

    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
