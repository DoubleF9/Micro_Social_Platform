@using System.Security.Claims
@model MicroSocialPlatform.Models.ApplicationUser
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<div class="container py-5">
    <!-- Alert Message -->
    @if (TempData["Message"] != null)
    {
        <div class="alert @TempData["Alert"] d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            @TempData["Message"]
        </div>
    }

    <!-- Profile Card -->
    <div class="card border-0 shadow-sm rounded-4 mb-5">
        <div class="card-body p-4 text-center">
            <div class="position-relative mb-4">
                <div class="profile-picture-container shadow">
                    <img src="@Model.ProfilePicture" alt="Profile Picture" class="profile-picture rounded-circle border" />
                </div>
            </div>

            <h2 class="mb-3">@Model.FirstName @Model.LastName</h2>
            <p class="text-muted mb-4">@Model.Description</p>

            <div class="d-flex justify-content-center gap-3">
                @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) != Model.Id && !ViewBag.IsFollowing)
                {
                    <form asp-action="SendFollowRequest" asp-controller="Follows" method="post">
                        <input type="hidden" name="followedId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                            <i class="bi bi-person-plus"></i>
                            Follow
                        </button>
                    </form>
                }
                @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) != Model.Id)
                {
                    <a asp-action="DirectMessages"
                       asp-controller="Messages"
                       asp-route-userId="@Model.Id"
                       class="btn btn-outline-primary d-flex align-items-center gap-2">
                        <i class="bi bi-chat-dots"></i>
                        Message
                    </a>
                }
                @if (User.Identity.IsAuthenticated && (User.FindFirstValue(ClaimTypes.NameIdentifier) == Model.Id || User.IsInRole("Admin")))
                {
                    <div class="d-flex gap-3 mt-4">
                        <a class="btn btn-primary d-flex align-items-center gap-2"
                           asp-controller="Users"
                           asp-action="Edit"
                           asp-route-id="@Model.Id">
                            <i class="bi bi-pencil-square"></i>
                            Edit Profile
                        </a>
                    </div>
                }
            </div>
            </div>


            <!-- Followers, Following, and Posts Counts -->
            <div class="d-flex justify-content-center gap-4 mt-4">
                <div>
                    <h6 class="mb-0">@ViewBag.FollowersCount</h6>
                    <small class="text-muted">Followers</small>
                </div>
                <div>
                    <h6 class="mb-0">@ViewBag.FollowingCount</h6>
                    <small class="text-muted">Following</small>
                </div>
                <div>
                    <h6 class="mb-0">@ViewBag.PostsCount</h6>
                    <small class="text-muted">Posts</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Posts Section -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-transparent border-0 p-4">
            <h3 class="h5 mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-journal-text"></i>
                Posts
            </h3>
        </div>
        <div class="card-body p-4">
            <div class="row row-cols-1 row-cols-md-2 g-4">
                @foreach (var post in Model.Posts)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0 rounded-4">
                            @await Html.PartialAsync("PostInfo", post)
                            <div class="card-footer bg-transparent border-0 p-3">
                                <a class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2"
                                   asp-controller="Posts"
                                   asp-action="Show"
                                   asp-route-id="@post.Id">
                                    <i class="bi bi-arrow-right-circle"></i>
                                    Read More
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .profile-picture-container {
        width: 150px;
        height: 150px;
        margin: 0 auto;
        overflow: hidden;
        border: 5px solid #fff;
        transition: all 0.3s ease;
    }

    .profile-picture {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .btn {
        transition: all 0.2s;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .btn-primary {
        background: linear-gradient(to right, #0d6efd, #0b5ed7);
        border: none;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}





