<br />
<h2>Posts</h2>
<br />

@if (ViewBag.Message != null)
{
    <div class="alert-success p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
        @ViewBag.Message
    </div>
	<br />
}
<a class="btn btn-primary" asp-controller="Posts" asp-action="New">New Post</a>
<br />
<br />
@foreach (var post in ViewBag.Posts)
{
    <div class="card">
        <partial name="PostInfo" model="post" />
        <a class="btn btn-success" asp-controller="Posts" asp-action="Show" asp-route-id="@post.Id">See post</a>
    </div>
    <br />
}
