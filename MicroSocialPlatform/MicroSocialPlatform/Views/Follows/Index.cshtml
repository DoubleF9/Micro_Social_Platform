@{
    var followers = ViewBag.Followers as IEnumerable<MicroSocialPlatform.Models.Follow>;
    var followRequests = ViewBag.FollowRequests as IEnumerable<MicroSocialPlatform.Models.Follow>;
}

@if (ViewBag.Message != null)
{
    <div class="alert @ViewBag.Alert">
        @ViewBag.Message
    </div>
}

<h2>Your Followers</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Profile Picture</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var follow in followers)
        {
            <tr>
                <td>
                    <img src="@follow.Follower.ProfilePicture" alt="Profile Picture" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                </td>
                <td>@follow.Follower.FirstName @follow.Follower.LastName</td>
                <td>@follow.Follower.Description</td>
            </tr>
        }
    </tbody>
</table>

<h2>Follow Requests</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Profile Picture</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var follow in followRequests)
        {
            <tr>
                <td>
                    <img src="@follow.Follower.ProfilePicture" alt="Profile Picture" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                </td>
                <td>@follow.Follower.FirstName @follow.Follower.LastName</td>
                <td>@follow.Follower.Description</td>
                <td>
                    <form asp-action="AcceptFollowRequest" method="post" style="display:inline;">
                        <input type="hidden" name="followerId" value="@follow.FollowerId" />
                        <input type="hidden" name="followedId" value="@follow.FollowedId" />
                        <button type="submit" class="btn btn-success">Accept</button>
                    </form>
                    <form asp-action="RejectFollowRequest" method="post" style="display:inline;">
                        <input type="hidden" name="followerId" value="@follow.FollowerId" />
                        <input type="hidden" name="followedId" value="@follow.FollowedId" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>





